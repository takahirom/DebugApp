<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.takahirom.sandboxapp" >

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LeakActivity"
            android:label="@string/title_activity_leak" >
        </activity>
        <activity
            android:name=".AllocationActivity"
            android:label="@string/title_activity_allocation" >
        </activity>
        <activity
            android:name=".AnrActivity"
            android:label="@string/title_activity_anr" >
        </activity>
    </application>

</manifest>
